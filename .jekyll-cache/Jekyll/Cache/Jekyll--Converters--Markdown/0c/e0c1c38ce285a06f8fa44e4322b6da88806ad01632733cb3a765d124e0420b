<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>import express from 'express';
import { PrismaClient } from '@prisma/client';
import routes from './pattern/routes';
import cookieParser from 'cookie-parser';
import cors from 'cors';

const prisma = new PrismaClient();
const PORT = 8060;
const app = express();

app.use(cors());
app.use(express.json()); //ë¯¸ë“¤
app.use(cookieParser());
app.use(routes);

const start = async () =&gt; {
  try {
    app.listen(PORT, () =&gt; console.log(`Server is listening on ${PORT}`));
  } catch (err) {
    console.error(err);
    await prisma.$disconnect();
  }
};

start();
</code></pre></div></div>
